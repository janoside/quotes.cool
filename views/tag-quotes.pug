extends layout

block headContent
	title #{tags} quotes

block content
	+quoteListPageHeader(quoteCount, limit, offset, sort, paginationBaseUrl)
		+pageTitle(`${quoteCount.toLocaleString()} Quote${quoteCount != 1 ? "s" : ""} tagged`)
			each tag in tags
				span.badge.text-bg-primary.me-1
					i.bi-tag-fill.me-2
					| #{tag}



	include ./shared/quotes-list.pug