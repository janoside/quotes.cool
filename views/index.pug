extends layout

block headContent
	title Home

block content
	if (session.username)
		h1 Home
		hr

		.d-block.d-md-none.mb-3
			form(method="get", action="/search")
				div.input-group.input-group-block
					input.form-control.form-control-block(type="text", name="query", placeholder="search...", value=(query))
					
					button.btn.btn-primary(type="submit")
						i.bi-search

		.card.mb-2
			.card-body
				- var buttons = [[`/${session.username}/quotes`, "My Quotes", "bi-list", quoteCount], ["/tags", "My Tags", "bi-tag-fill", tagCount], ["/speakers", "People", "bi-people-fill", speakerCount]];

				.d-none.d-md-block
					each item in buttons
						a.btn.btn-primary.me-2(href=item[0])
							i.me-2(class=item[2])
							| #{item[1]}
							if (item.length > 3)
								span.badge.bg-light.text-dark.ms-2 #{item[3].toLocaleString()}

					
				.d-md-none.d-grid
					each item in buttons
						a.btn.btn-primary.mb-2(href=item[0])
							i.me-2(class=item[2])
							| #{item[1]}
							if (item.length > 3)
								span.badge.bg-light.text-dark.ms-2 #{item[3].toLocaleString()}
		
		.card.mb-2
			.card-body
				h5 My Lists
				hr
				
				h5
					ul
						each list in lists
							li.mb-2
								a(href=`/list/${list._id}`) #{list.name}
		
		.card.mb-2
			.card-body
				h5 Tools
				hr

				- var buttons = [["/new-quote", "New Quote", "bi-plus-circle", "Add a new quote"], ["/new-list", "New List", "bi-list", "Create a new shareable list"], ["/import", "Import Quotes", "bi-box-arrow-in-up", "Upload a list of new quotes"]];

				.d-none.d-md-block
					each item in buttons
						a.btn.btn-primary.me-2(href=item[0], title=item[3], data-bs-toggle="tooltip")
							i.me-2(class=item[2])
							| #{item[1]}

					
				.d-md-none.d-grid
					each item in buttons
						a.btn.btn-primary.mb-2(href=item[0], title=item[3], data-bs-toggle="tooltip")
							i.me-2(class=item[2])
							| #{item[1]}
				

	else
		h1 #{appConfig.siteName}
		hr

		h5 Welcome to #{appConfig.siteName}. If you have an account, login below. If not, you can 
			a(href="/signup") Sign up
			| .

		.row.mt-5
			.col-md-3.col-lg-3
			.col-md-6.col-lg-6
				include ./shared/login-form.pug