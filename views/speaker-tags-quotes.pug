extends layout

block content
	h1 #{quotes.length} Quote
		| #{quotes.length != 1 ? "s" : ""}
		|  from 
		span.badge.badge-primary.mr-1
				i.fas.fa-child.mr-2
				| #{speaker}
		|  tagged 
		each tag in tags
			span.badge.badge-primary.mr-1
				i.fas.fa-tag.mr-2
				| #{tag}

	hr

	include ./shared/quotes-list.pug