extends layout

block headContent
	title #{speaker} #{tags} quotes

block content
	+quoteListPageHeader(quoteCount, limit, offset, sort, paginationBaseUrl)
		h1 #{quoteCount.toLocaleString()} Quote
			| #{quoteCount != 1 ? "s" : ""}
			|  from 
			a.badge.text-bg-primary.me-1(href=`./speaker/${speaker}`)
					i.bi-person-fill.me-2
					| #{speaker}
			|  tagged 
			each tag in tags
				span.badge.text-bg-primary.me-1
					i.bi-tag-fill.me-2
					| #{tag}
	

	hr

	include ./shared/quotes-list.pug