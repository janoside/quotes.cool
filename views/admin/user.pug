extends adminLayout

block adminContent
	+pageTitle(`User: ${user.username}`)


	.mb-4
		table.table.table-striped
			tr
				th Username
				td.text-monospace #{user.username}

			tr
				th Roles
				td.text-monospace
					if (user.roles)
						| #{user.roles}
					else
						| -
			
			tr
				th Created At
				td.text-monospace #{utils.formatDate(user.createdAt)}
			
			tr
				th Updated At
				td.text-monospace #{utils.formatDate(user.updatedAt)}
	

	
	.mt-6
		a.btn.btn-primary.me-3(href=`/admin/user/${user.username}/add-role/admin`) Promote to Admin
		a.btn.btn-danger.btn-block(href=`/admin/user/${user.username}/delete`) Delete User
			