.row
	if (tagsData)
		.col-lg-2.col-md-12
			each item in tagsData
				if (tags.includes(item._id))
					div.d-lg-block.d-inline
						a.btn.btn-success.btn-sm.mr-1.mb-2(href=`${speaker ? ("/speaker/" + speaker) : ""}/tags/${item._id}`)
							small
								i.fas.fa-tag.mr-2
								| #{item._id} 
								span.badge.badge-light #{item.count.toLocaleString()}

			each item in tagsData
				if (!tags.includes(item._id))
					div.d-lg-block.d-inline
						a.btn.btn-primary.btn-sm.mr-1.mb-2(href=`${speaker ? ("/speaker/" + speaker) : ""}/tags/${item._id}`)
							small
								i.fas.fa-tag.mr-2
								| #{item._id} 
								span.badge.badge-light #{item.count.toLocaleString()}

						if (!tags.includes(item._id) && tags.length > 0)
							a.btn.btn-sm.btn-secondary.mr-2.mb-2(href=`${speaker ? ("/speaker/" + speaker) : ""}/tags/${tags.slice().concat([item._id]).join(",")}`, title=`Add filter: ${item._id}`, data-toggle="tooltip")
								small
									| + 

	div(class=(tagsData ? "col-md-10" : "col-md-12"))
		.grid
			each quote, quoteIndex in quotes
				.grid-item.col-xl-4.col-sm-6.p-0.px-md-2
					include ./quote-card.pug